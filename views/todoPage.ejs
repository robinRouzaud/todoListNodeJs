<!DOCTYPE html>
<html>
    <head>
        <title>ToDo list</title>
        <link rel="stylesheet" type="text/css" href="/style/style.css">
    </head>
    <body>
        <center>
            <h1>Projet ToDo list de <%= username %>!</h1>
            <a href="http://192.168.1.17:8080/deconnexion"><button>DÃ©connexion</button></a>
        </center>

        <% 
        var listLabel = 'list';
        var j = 1;
        console.log('Le contenu est ' + content);
        while (typeof(content[listLabel + j]) != 'undefined') { 
            console.log(j);
            var taches = content[listLabel + j.toString()].tasks;
            
            %>
            <h2>Liste <%= content[listLabel + j].listName %>:</h2>

            <ul>
                <% for(var i = 0, c = taches.length; i < c; i++) { %>
                    <% var taskId = taches[i].taskId;
                       var listId = taches[i].taskListId; %>
                    <li><a href="http://192.168.1.17:8080/todolist/supprimerTache?id=<%=taskId%>&listId=<%=listId%>"><img class="deleteIcon" src="/images/delete_grey_27x27.png"></a><%= taches[i].taskName %></li>
                <%}%>
            </ul>
            
            <br>

            <div name="ajoutTache">
                <form method="POST" action="/todolist/ajouterTache">
                    <input type="text" name="task">
                    <input type="text" name="listeId" value="<%=listId%>" disabled>
                    <input type="submit" value="Valider">
                </form>
            </div>
        <% j++;
        } %>
    </body>
</html>