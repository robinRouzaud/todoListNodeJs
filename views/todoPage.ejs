<!DOCTYPE html>
<html>
    <head>
        <title>ToDo list</title>
        <link rel="stylesheet" type="text/css" href="/style/style.css">
    </head>
    <body>
        <center>
            <h1>Projet ToDo list de <%= username %>!</h1>
            <a href="http://192.168.1.17:8080/deconnexion"><button>DÃ©connexion</button></a>
        </center>

        <div name="createList">
            <form method="POST" action="/createList">
                <input type="text" name="taskListName">
                <input type="submit" value="Valider">
            </form>
        </div>

        <%
        taches.forEach(liste => {
            var listId = liste[0].taskListId;             
            %>
            <h2>Liste <%= liste[0].taskListName %>:</h2>

            <ul>
                <% for(var i = 1, c = liste.length; i < c; i++) { %>
                    <% var taskId = liste[i].taskId; %>
                    <li><a href="http://192.168.1.17:8080/todolist/supprimerTache?id=<%=taskId%>&listId=<%=listId%>"><img class="deleteIcon" src="/images/delete_grey_27x27.png"></a><%= liste[i].taskName %></li>
                <%}%>
            </ul>
            
            <br>

            <div name="ajoutTache">
                <form method="POST" action="/todolist/ajouterTache">
                    <input type="text" name="task">
                    <input id="id" type="text" name="listeId" value="<%=listId%>">
                    <input type="submit" value="Valider">
                </form>
            </div>
        <%
        }) %>
    </body>
</html>